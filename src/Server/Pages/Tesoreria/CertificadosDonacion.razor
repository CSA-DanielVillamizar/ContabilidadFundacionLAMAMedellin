@page "/tesoreria/donaciones"
@using Server.DTOs.Donaciones
@using Server.Models
@using Server.Services.Donaciones
@inject ICertificadosDonacionService CertificadosService
@inject NavigationManager Nav
@attribute [Authorize(Policy = "TesoreroJuntaConsulta")]

<PageTitle>Certificados de Donación - RTE</PageTitle>

<Breadcrumb Items="@breadcrumbs" />

<div class="container mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-slate-800 dark:text-slate-100">
            <i class="bi bi-award me-2"></i>Certificados de Donación (RTE)
        </h1>
        <AuthorizeView Roles="Tesorero,Junta">
            <button class="btn btn-primary" @onclick="IrANuevo">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Certificado
            </button>
        </AuthorizeView>
    </div>

    <!-- Filtros -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-4 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Buscar
                </label>
                <input type="text" 
                       class="w-full rounded-lg border-slate-300 dark:border-slate-600" 
                       placeholder="Nombre o identificación..."
                       @bind="filtroTexto"
                       @bind:event="oninput"
                       @onkeyup="BuscarConEnter" />
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Estado
                </label>
                <select class="w-full rounded-lg border-slate-300 dark:border-slate-600" 
                        @bind="filtroEstado">
                    <option value="">Todos</option>
                    <option value="@EstadoCertificado.Borrador">Borrador</option>
                    <option value="@EstadoCertificado.Emitido">Emitido</option>
                    <option value="@EstadoCertificado.Anulado">Anulado</option>
                </select>
            </div>
            <div class="flex items-end">
                <button class="btn btn-secondary w-full" @onclick="Buscar">
                    <i class="bi bi-search me-2"></i>Buscar
                </button>
            </div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-12">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-slate-600 dark:text-slate-400">Cargando certificados...</p>
        </div>
    }
    else if (certificados == null || !certificados.Any())
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-12 text-center">
            <i class="bi bi-inbox text-6xl text-slate-300 dark:text-slate-600"></i>
            <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
                No se encontraron certificados de donación
            </p>
            <AuthorizeView Roles="Tesorero,Junta">
                <button class="btn btn-primary mt-4" @onclick="IrANuevo">
                    <i class="bi bi-plus-circle me-2"></i>Crear Primer Certificado
                </button>
            </AuthorizeView>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-slate-50 dark:bg-slate-700 border-b border-slate-200 dark:border-slate-600">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">No.</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Fecha Emisión</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Fecha Donación</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Donante</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Valor</th>
                            <th class="px-4 py-3 text-center text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Estado</th>
                            <th class="px-4 py-3 text-center text-xs font-semibold text-slate-700 dark:text-slate-300 uppercase">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var cert in certificados)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700 transition">
                                <td class="px-4 py-3 whitespace-nowrap">
                                    <span class="font-mono text-sm text-slate-900 dark:text-slate-100">
                                        @cert.NumeroCompleto
                                    </span>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-600 dark:text-slate-400">
                                    @cert.FechaEmision.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-600 dark:text-slate-400">
                                    @cert.FechaDonacion.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-4 py-3">
                                    <div class="text-sm font-medium text-slate-900 dark:text-slate-100">@cert.NombreDonante</div>
                                    <div class="text-xs text-slate-500 dark:text-slate-400">@cert.IdentificacionDonante</div>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-right">
                                    <span class="text-sm font-semibold text-green-600 dark:text-green-400">
                                        $@cert.ValorDonacionCOP.ToString("N0")
                                    </span>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-center">
                                    @switch (cert.Estado)
                                    {
                                        case EstadoCertificado.Borrador:
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                                                <i class="bi bi-pencil me-1"></i>Borrador
                                            </span>
                                            break;
                                        case EstadoCertificado.Emitido:
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                                <i class="bi bi-check-circle me-1"></i>Emitido
                                            </span>
                                            break;
                                        case EstadoCertificado.Anulado:
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                                                <i class="bi bi-x-circle me-1"></i>Anulado
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-center">
                                    <div class="flex justify-center space-x-2">
                                        <button class="btn-icon btn-icon-sm btn-secondary" 
                                                @onclick="() => VerDetalle(cert.Id)"
                                                title="Ver detalle">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn-icon btn-icon-sm btn-primary" 
                                                @onclick="() => DescargarPdf(cert.Id)"
                                                title="Descargar PDF">
                                            <i class="bi bi-file-pdf"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (resultado != null && resultado.TotalPages > 1)
            {
                <div class="px-4 py-3 border-t border-slate-200 dark:border-slate-700 flex items-center justify-between">
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                        Mostrando @certificados.Count de @resultado.TotalCount certificados
                    </div>
                    <div class="flex space-x-2">
                        <button class="btn btn-sm btn-secondary" 
                                @onclick="PaginaAnterior"
                                disabled="@(paginaActual <= 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <span class="px-3 py-1 text-sm text-slate-700 dark:text-slate-300">
                            Página @paginaActual de @resultado.TotalPages
                        </span>
                        <button class="btn btn-sm btn-secondary" 
                                @onclick="PaginaSiguiente"
                                disabled="@(paginaActual >= resultado.TotalPages)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private bool cargando = false;
    private PagedResult<CertificadoDonacionListItem>? resultado;
    private List<CertificadoDonacionListItem> certificados = new();
    
    private string filtroTexto = string.Empty;
    private string filtroEstado = string.Empty;
    private int paginaActual = 1;
    private const int registrosPorPagina = 20;

    private List<Server.Components.Shared.Breadcrumb.BreadcrumbItem> breadcrumbs => new()
    {
        new() { Label = "Tesorería", Url = "/tesoreria" },
        new() { Label = "Certificados RTE", IsActive = true }
    };

    protected override async Task OnInitializedAsync()
    {
        await CargarCertificados();
    }

    private async Task CargarCertificados()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            EstadoCertificado? estado = null;
            if (!string.IsNullOrEmpty(filtroEstado) && Enum.TryParse<EstadoCertificado>(filtroEstado, out var e))
            {
                estado = e;
            }

            resultado = await CertificadosService.GetPagedAsync(
                string.IsNullOrWhiteSpace(filtroTexto) ? null : filtroTexto, 
                estado, 
                paginaActual, 
                registrosPorPagina);
            
            certificados = resultado.Items;
        }
        catch (Exception ex)
        {
certificados = new();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task Buscar()
    {
        paginaActual = 1;
        await CargarCertificados();
    }

    private async Task BuscarConEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Buscar();
        }
    }

    private async Task PaginaAnterior()
    {
        if (paginaActual > 1)
        {
            paginaActual--;
            await CargarCertificados();
        }
    }

    private async Task PaginaSiguiente()
    {
        if (resultado != null && paginaActual < resultado.TotalPages)
        {
            paginaActual++;
            await CargarCertificados();
        }
    }

    private void IrANuevo()
    {
        Nav.NavigateTo("/tesoreria/donaciones/nuevo");
    }

    private void VerDetalle(Guid id)
    {
        Nav.NavigateTo($"/tesoreria/donaciones/{id}");
    }

    private void DescargarPdf(Guid id)
    {
        Nav.NavigateTo($"/api/certificados-donacion/{id}/pdf", true);
    }
}
