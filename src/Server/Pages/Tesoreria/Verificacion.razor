@page "/tesoreria/verificacion"
@attribute [Authorize(Policy = "TesoreroJuntaConsulta")]
@using Server.Services.Reportes
@using Microsoft.AspNetCore.Components.Forms
@inject IVerificacionTesoreriaService VerifService
@inject MudBlazor.ISnackbar Snackbar

<Breadcrumb Items="@breadcrumbs" />

<h3>Verificación de Tesorería</h3>

<EditForm Model="this">
    <div class="row g-2 mb-3">
        <div class="col-auto">
            <label class="form-label">Año</label>
            <InputNumber @bind-Value="anio" class="form-control" />
        </div>
        <div class="col-auto">
            <label class="form-label">Mes</label>
            <InputNumber @bind-Value="mes" class="form-control" />
        </div>
        <div class="col-auto align-self-end">
            <button type="button" class="btn btn-primary" @onclick="VerificarAsync" disabled="@verificando">
                @if (verificando)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Verificar
            </button>
            <button type="button" class="btn btn-outline-secondary ms-2" @onclick="RepararSaldoInicialAsync" disabled="@reparando">
                @if (reparando)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Reparar saldo inicial
            </button>
        </div>
    </div>
</EditForm>

@if (resultado is not null)
{
    <div class="card">
        <div class="card-header">Resultado</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <tbody>
                        <tr><th>Año/Mes</th><td>@resultado.Anio / @resultado.Mes</td></tr>
                        <tr><th>Saldo inicial</th><td>@resultado.SaldoInicial.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td></tr>
                        <tr><th>Ingresos</th><td>@resultado.Ingresos.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td></tr>
                        <tr><th>Egresos</th><td>@resultado.Egresos.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td></tr>
                        <tr class="table-primary"><th>Saldo final</th><td><strong>@resultado.SaldoFinal.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</strong></td></tr>
                        <tr><th>Item Saldo Inicial (AJUSTE-2025-0001)</th><td>@(resultado.SaldoInicialItemExiste ? "✔️ OK" : "⚠️ Faltante")</td></tr>
                        <tr><th>Moneda de ítems (COP)</th><td>@(resultado.MonedaOrigenConsistente ? "✔️ OK" : "⚠️ Inconsistente")</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private int anio = 2025;
    private int mes = 10;
    private VerificacionResultado? resultado;
    private bool verificando = false;
    private bool reparando = false;

    private List<Server.Components.Shared.Breadcrumb.BreadcrumbItem> breadcrumbs => new()
    {
        new() { Label = "Tesorería", Url = "/tesoreria" },
        new() { Label = "Verificación", IsActive = true }
    };

    protected override async Task OnInitializedAsync()
    {
        await VerificarAsync();
    }

    private async Task VerificarAsync()
    {
        verificando = true;
        try
        {
            resultado = await VerifService.VerificarAsync(anio, mes);
            Snackbar.Add($"Verificación completada para {anio}/{mes:D2}", MudBlazor.Severity.Success);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"[Verificacion.VerificarAsync] {ex}");
            Snackbar.Add($"Error al verificar: {ex.Message}", MudBlazor.Severity.Error);
        }
        finally
        {
            verificando = false;
        }
    }

    private async Task RepararSaldoInicialAsync()
    {
        reparando = true;
        try
        {
            var reparo = await VerifService.RepararSaldoInicialAsync();
            Snackbar.Add("Saldo inicial reparado correctamente", MudBlazor.Severity.Success);
            await VerificarAsync();
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"[Verificacion.RepararSaldoInicialAsync] {ex}");
            Snackbar.Add($"Error al reparar: {ex.Message}", MudBlazor.Severity.Error);
        }
        finally
        {
            reparando = false;
        }
    }
}
